<h1>Editing <%= @song.title %></h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist %>
  <%= f.text_field :artist_name %>
  <br />
  <%= f.label :genre %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br>
  <%= f.fields_for :notes do |note_fields| %>
    <%= f.label :note %>
    <input name="song[note_contents][]" value="<%= @song.notes[note_fields.index].content %>">
    <br>
  <% end %>

  <br>
  <%= f.submit %>
<% end %>
